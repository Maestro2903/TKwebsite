{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./frontend/components"],
      "@/components/*": ["./frontend/components/*"],
      "@/contexts": ["./frontend/contexts"],
      "@/contexts/*": ["./frontend/contexts/*"],
      "@/hooks": ["./frontend/hooks"],
      "@/hooks/*": ["./frontend/hooks/*"],
      "@/lib": ["./backend/lib"],
      "@/lib/*": ["./backend/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
