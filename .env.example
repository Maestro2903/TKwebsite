# Firebase (client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# Firebase Admin (server; for create-order and webhook). JSON key as single line.
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# Cashfree (server + payment create-order/verify)
CASHFREE_APP_ID=
# or NEXT_PUBLIC_CASHFREE_APP_ID= (for client-side Cashfree SDK mode)
CASHFREE_SECRET_KEY=
# Sandbox vs production: NEXT_PUBLIC_CASHFREE_ENV=production or leave unset for sandbox
NEXT_PUBLIC_CASHFREE_MODE=sandbox

# Optional: confirmation email after payment (verify route uses Resend)
# RESEND_API_KEY=
